generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Tip {
  id   Int    @id @default(autoincrement())
  text String
}

model Point {
  id   Int    @id @default(autoincrement())
  city String
  name String
}
